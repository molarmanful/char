body
  margin 0
  background #333
  color #ccc
  pre
    font-family Courier New
    font-size 13px
  a
    color: white
  #x
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    text-align center
  .logo
    color limegreen
    position absolute
    bottom 55%
    left 50%
    transform translateX(-50%)
  .start
    top 50%
    left 50%
    transform translateX(-50%)
    text-align center
    color red
    text-decoration none
    position absolute
  .des
    width 50%
    height 35%
    bottom 0
    left 25%
    white-space pre-wrap
    overflow auto
    position absolute
